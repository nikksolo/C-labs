<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button x:Name="setNameButton" Content="Set name" Click="Button_Click" Canvas.Left="175" Canvas.Top="175"/>
        <Button x:Name="returnNameButton" Content="Ret name" Click="returnNameButton_Click" Canvas.Left="167" Canvas.Top="139" Width="70"/>
        <Label x:Name="label" Content="" Canvas.Left="267" Canvas.Top="172"/>
        <TextBox x:Name="textBox" TextWrapping="Wrap" Width="120" TextChanged="textBox_TextChanged" Canvas.Left="267" Canvas.Top="139"/>

        <Button Canvas.Left="10" Canvas.Top="10" Content="Click Me" Height="23" Name="button3" Width="75" Click="button3_Click"/>
        <TextBox Width="170" Canvas.Left="90" Canvas.Top="12" Name="myTextBox" />
    </Canvas>
</Window>
