<Window x:Class="InkCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InkCanvas"
        mc:Ignorable="d"
        Title="Ink Pad" Background="LightGray" Height="550" Width="370">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <InkCanvas x:Name="inkCanvas1" EditingMode="Ink" Background="LightYellow" Grid.RowSpan="2"/>
        <Button x:Name="button1" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="185" Click="button1_Click" Grid.Row="1"/>
        <Button x:Name="button2" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="185" Click="button2_Click" Grid.Row="1" Margin="185,0,0,0"/>
    </Grid>
</Window>
