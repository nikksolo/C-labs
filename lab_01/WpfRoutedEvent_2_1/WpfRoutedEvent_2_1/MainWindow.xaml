<Window TextBoxBase.TextChanged="Window_TextChanged"  x:Class="WpfRoutedEvent_2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_2_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <RadioButton x:Name="radioButtonTextbox" Content="Обработка события в Textbox" HorizontalAlignment="Left" Margin="141,112,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButtonGrid" Content="Обработка события в Grid" HorizontalAlignment="Left" Margin="141,146,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButtonWindow" Content="Обработка события в Window" HorizontalAlignment="Left" Margin="141,181,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="426,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
